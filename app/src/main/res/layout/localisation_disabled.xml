<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="@dimen/no_beacon_size"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_location_off_black_24dp"
        android:alpha="@dimen/no_beacon_alpha"/>
    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/no_localisation_enabled_title"
            android:textSize="34sp"/>
        <TextView
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@string/no_localisation_enabled_content"/>

    </LinearLayout>
</RelativeLayout>